{
  "expo": {
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(VYBES_APP) to use Face ID."
        }
      ],
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Axiforma-Black.ttf",
            "./assets/fonts/Axiforma-Light.ttf",
            "./assets/fonts/Axiforma-Regular.ttf",
            "./assets/fonts/Axiforma-Book.ttf",
            "./assets/fonts/Axiforma-BlackItalic.ttf"
          ]
        }
      ]
    ],
    "name": "VybesApp",
    "scheme": "vybesapp",
    "slug": "vybesapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/vybe.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "We need to use Face ID to secure your account."
      },
      "bundleIdentifier": "com.tee2dwhy.vybesapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/vybe.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "package": "com.tee2dwhy.vybesapp"
    },
    "web": {
      "favicon": "./assets/images/vybe.png"
    },
    "extra": {
      "eas": {
        "projectId": "65410b64-1a30-44ac-a6de-b97a9555dbbc"
      }
    }
  }
}
